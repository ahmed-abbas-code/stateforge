{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": [
      "dom",
      "dom.iterable",
      "es2021",
      "ESNext"
    ],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx",
    "noEmit": true,
    "declaration": true,
    "types": [
      "node"
    ],
    "baseUrl": ".",
    "paths": {
      "@authentication/auth/*": [
        "src/authentication/*"
      ],
      "@shared/shared/*": [
        "src/shared/*"
      ],
      "@state/state/*": [
        "src/state/*"
      ]
    }
  },
  "include": [
    "src/**/*",
    "src/authentication/server/pages/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}