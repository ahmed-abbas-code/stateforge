{
  "name": "stateforge",
  "private": true,
  "packageManager": "pnpm@9.0.0",
  "workspaces": [
    "packages/core",
    "packages/starter",
    "packages/cli"
  ],
  "scripts": {
    "build": "pnpm -r run build",
    "dev": "pnpm --filter @stateforge/starter dev",
    "lint": "pnpm -r run lint",
    "check:env": "tsx scripts/validate-and-generate-env.ts",
    "show:core": "find packages/core -type f \\( -name '.env*' -o ! -name '.*' \\) ! -path '*/node_modules/*' ! -path '*/dist/*' ! -path '*/.git/*' | sort | scripts/show-tree.py",
    "show:starter": "find packages/starter -type f \\( -name '.env*' -o ! -name '.*' \\) ! -path '*/node_modules/*' ! -path '*/dist/*' ! -path '*/.next/*' ! -path '*/.git/*' | sort | scripts/show-tree.py",
    "show:cli": "find packages/cli -type f \\( -name '.env*' -o ! -name '.*' \\) ! -path '*/node_modules/*' ! -path '*/dist/*' ! -path '*/.git/*' | sort | scripts/show-tree.py",
    "tsc:core": "pnpm --filter @stateforge/core exec tsc --project tsconfig.json"
  },
  "devDependencies": {
    "@testing-library/react": "^16.3.0",
    "@types/crypto-js": "^4.2.2",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^20.19.1",
    "@types/react": "19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitest/ui": "^3.2.4",
    "eslint": "^8.57.0",
    "jsdom": "^26.1.0",
    "tsx": "^4.7.0",
    "typescript": "^5.4.5",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "axios-retry": "^4.5.0",
    "dotenv": "^16.5.0",
    "next-rate-limit": "^0.0.3",
    "redis": "^5.5.6",
    "zod": "^3.22.4"
  }
}
