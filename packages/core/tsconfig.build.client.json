{
  "extends": "../../tsconfig.build.base.json",
  "compilerOptions": {
    "outDir": "dist/client",
    "rootDir": "src",
    "baseUrl": "src",
    "paths": {
      "@core/common/*": ["common/*"]
    },
    "jsx": "react-jsx",

    "declaration": true,
    "declarationMap": true,
    "noEmit": true
  },
  "include": ["src/client/**/*", "src/common/**/*"],
  "exclude": ["tests", "**/*.test.*", "**/*.spec.*", "node_modules", "dist"]
}
