{
  "name": "@stateforge/core",
  "version": "0.1.0",
  "description": "Secure, pluggable framework for state, auth, and persistence across client/server.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./context/state/AppStateContext": {
      "import": "./dist/context/state/AppStateContext.js",
      "types": "./dist/context/state/AppStateContext.d.ts"
    },
    "./hooks/usePersistedFramework": {
      "import": "./dist/hooks/usePersistedFramework.js",
      "types": "./dist/hooks/usePersistedFramework.d.ts"
    },
    "./strategies/factory/createPersistenceStrategy": {
      "import": "./dist/strategies/factory/createPersistenceStrategy.js",
      "types": "./dist/strategies/factory/createPersistenceStrategy.d.ts"
    },
    "./strategies/implementations/LocalStorageStrategy": {
      "import": "./dist/strategies/implementations/LocalStorageStrategy.js",
      "types": "./dist/strategies/implementations/LocalStorageStrategy.d.ts"
    }
  },
  "scripts": {
    "build": "tsc --project tsconfig.build.json",
    "dev": "tsc --watch --project tsconfig.build.json",
    "lint": "eslint 'src/**/*.{ts,tsx}' --fix"
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "axios": "^1.6.8",
    "firebase": "^10.12.0",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "peerDependencies": {
    "next": "^13.0.0 || ^14.0.0",
    "react": "^18.0.0"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "typescript": "^5.4.5"
  },
  "license": "MIT"
}
