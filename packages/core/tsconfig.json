{
  "extends": "../../tsconfig.base.json",

  "compilerOptions": {
    // === Path Aliases ===
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"]
    },

    // === Output Behavior ===
    "declaration": true,
    "emitDeclarationOnly": false,        // ✅ Ensures JS + .d.ts files are emitted
    "noEmit": false,
    "composite": true,
    "outDir": "dist",
    "rootDir": "src",                    // ✅ Ensures proper structure in dist/

    // === Module & Language Support ===
    "jsx": "react-jsx",
    "module": "ESNext",
    "target": "ES2020",
    "lib": ["DOM", "ES2020"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    // === Safety + DX ===
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true
  },

  "include": ["src/**/*"],                // ✅ Ensures all .ts/.tsx in src/ are picked up
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.*",
    "**/*.spec.*",
    "**/__tests__/**"
  ]
}
