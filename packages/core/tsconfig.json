{
  "extends": "../../tsconfig.base.json",

  "compilerOptions": {
    // === Path Aliases ===
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"],
      "@stateforge/core/*": ["./*"]
    },

    // === Output Behavior ===
    "declaration": true,
    "emitDeclarationOnly": false,
    "noEmit": false,
    "composite": true,
    "outDir": "dist",
    "rootDir": ".",

    // === Module & Language Support ===
    "jsx": "react-jsx",
    "module": "ESNext",
    "target": "ES2020",
    "lib": ["DOM", "ES2020"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    // === Safety + DX ===
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,

    // === Test Environment Support ===
    "types": ["vitest"]
  },

  "include": [
    "src/**/*",
    "tests/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.spec.*",
    "**/__tests__/**"
  ]
}
