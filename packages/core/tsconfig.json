{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@core/client/*": ["client/*"],
      "@core/server/*": ["server/*"],
      "@core/common/*": ["common/*"]
    },
    "jsx": "react-jsx",
    "types": ["vitest", "node"],
    "noEmit": true
  },
  "include": ["src/**/*", "tests/**/*"],
  "exclude": ["node_modules", "dist"]
}
