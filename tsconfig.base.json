{
  "compilerOptions": {
    "target": "ES2021",
    "module": "Node16",
    "moduleResolution": "Node16",
    "lib": ["DOM", "ESNext"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@stateforge/core": ["packages/core/dist/client-only.d.ts"],
      "@stateforge/core/*": ["packages/core/dist/*"],
      "@stateforge/core/server": ["packages/core/dist/server-only.d.ts"]
    }
  },
  "include": ["packages/core/**/*"],
  "exclude": ["node_modules", "dist"]
}
