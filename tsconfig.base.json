{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ESNext",
    "lib": ["DOM", "ESNext"],
    "moduleResolution": "Node16",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node"],

    // âœ… Monorepo-aware path aliases (no local alias here)
    "baseUrl": ".",
    "paths": {
      "@stateforge/core/*": ["packages/core/src/*"],
      "@stateforge/starter/*": ["packages/starter/src/*"],
      "@stateforge/cli/*": ["packages/cli/src/*"]
    }
  },

  "include": ["packages/**/*"],
  "exclude": ["node_modules", "dist"]
}
